<?xml version="1.0" encoding="UTF-8"?>
<root>
	<Info>
		<Name>Blue</Name>
		<Folder>Blue</Folder>
		<Author>flokuep</Author>
	</Info>
	<MissingCover>
		<!--Cover definitions when a category is missing a cover-->
		<!--Possible types are: Default, Artist, Letter, Edition, Genre, Language, Year, Decade, Date -->
		<Default>
			<Text>
				<!--<Text>: Text to be shown, %TEXT% will be replace by the category name-->
				<Text>%TEXT%</Text>
				<!--<Font>: Text font name-->
				<Font>Outline</Font>
				<!--<Style>: Text style: Normal, Italic, Bold, BoldItalic-->
				<Style>Bold</Style>
				<!--<Size> Maximum size of the text in px-->
				<Size>500</Size>
				<!--<Color>: Text color from ColorScheme (high priority)-->
				<!--or <R>, <G>, <B>, <A> (lower priority)-->
				<R>1</R><G>1</G><B>1</B><A>0.8</A>
				<!--<Margin>: Spacing of the text from the borders of the image in px-->
				<Margin>24</Margin>
				<MarginLeft>24</MarginLeft>
				<!--<Indent>: Indentation of the text for multiple lines-->
				<Indent>100</Indent>
			</Text>
			<Background>
				<R>1</R><G>1</G><B>1</B><A>1</A>
			</Background>
			<!--<Image>: Background image for the cover-->
			<Image>EmptyCover.png</Image>
			<!--<ShowFirstCover>Whether the first cover of a category should be shown(optional)-->
			<ShowFirstCover>true</ShowFirstCover>
			<!--<ImageAlpha>Alpha value of the image in case the first cover is shown(optional)-->
			<ImageAlpha>0.75</ImageAlpha>
		</Default>
	</MissingCover>
</root>
